        <Border BorderBrush="#FF850808" BorderThickness="1" HorizontalAlignment="Left" Height="235" Margin="0,10,0,0" VerticalAlignment="Top" Width="296" Background="#FF343434" CornerRadius="8,8,8,8" Grid.Column="1" Grid.ColumnSpan="3" />
