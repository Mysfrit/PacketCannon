        <TextBox x:Name ="FakeAddressesMinValue" HorizontalAlignment="Left" IsEnabled="False"  Margin="9,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.558,2.826" PreviewTextInput="OnlyNumbers" Grid.Column="2" Foreground="White" Background="#FF646464" Height="18" />
        <TextBox x:Name ="FakeAddressesMaxValue" HorizontalAlignment="Left" IsEnabled="False"  Margin="65,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.558,2.826" PreviewTextInput="OnlyNumbers" Grid.Column="2" Foreground="White" Background="#FF646464" Height="18" />
        <Label Content="Min" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,385,0,0" Foreground="White" Grid.Column="2" Height="26" Width="30" RenderTransformOrigin="-0.333,0.5" />
        <Label Content="Max" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,385,0,0" Foreground="White" Grid.Column="2" Height="26" Width="32" />
        <Label Content="Number of IP's" HorizontalAlignment="Left" Margin="44,385,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1" Height="26" Width="91" />
        <Label Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="46,405,0,0" Foreground="White" Grid.Column="2" Height="26" Width="15" />
        <Label Content="Attack!" Grid.Column="3" HorizontalAlignment="Left" Margin="103,455,0,0" VerticalAlignment="Top" Width="60" Foreground="White" Height="26" />
        <Image Name="LoadingWheel" gif:ImageBehavior.AnimatedSource="8.gif" Grid.Column="3" HorizontalAlignment="Left" Height="64" Visibility="Hidden" Margin="247,455,0,0" VerticalAlignment="Top" Width="87" Grid.RowSpan="2" />
        <Label Content="Last IP octet:" Grid.Column="2" HorizontalAlignment="Left" Margin="14,367,0,0" VerticalAlignment="Top" Foreground="White" />
