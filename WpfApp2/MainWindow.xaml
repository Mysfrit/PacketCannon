        </Border>
        <Border BorderBrush="#FF850808" BorderThickness="1" Height="63" Margin="36,455,351,0" VerticalAlignment="Top" Background="#FF343434" CornerRadius="8,8,8,8" Grid.Column="3" Grid.RowSpan="2" />
        <TextBox Name="HostIpAddress" IsEnabled="False"
             Text="{Binding Name }"
              TextChanged="HostIpAddressChanged"  Margin="17,60,5,401" Background="#FF646464" Foreground="White" Grid.Column="1" />
        <TextBox Name="TargetIpAddress"
             Text="{Binding Name}"
             TextChanged="TargetIpAddressChanged" Margin="17,170,5,291"  RenderTransformOrigin="-0.483,0.226" Foreground="White" Background="#FF646464" Grid.Column="1" />
        <TextBox Name="HostMacAddress" IsEnabled="False"
             Text="{Binding Name}"
              TextChanged="HostIpAddressChanged" Margin="14,59,13,402" Grid.Column="2" Background="#FF646464" Foreground="White" RenderTransformOrigin="0.65,0.567" />
        <TextBox Name="TargetMacAddress" IsEnabled="False"
             Text="{Binding Name}"
              TextChanged="HostIpAddressChanged" Margin="14,170,13,291"  Grid.Column="2" Foreground="White" Background="#FF646464" />
        <Button Name="GetMackAddressButton" Content="Get Mac Address" HorizontalAlignment="Left" Margin="92,215,0,0" VerticalAlignment="Top" Width="103" RenderTransformOrigin="0.156,-0.1" Click="GetTargetMacButtonClick" Grid.Column="1" Background="#FF381818" Foreground="White" Height="20" Grid.ColumnSpan="2" />
        <Button Name="SelectInterfaceButton" Content="Select interface" HorizontalAlignment="Left" Margin="92,102,0,0" VerticalAlignment="Top" Width="103" Click="ChooseIntButtonClick" Grid.Column="1" BorderBrush="#FF4F4E4E" Background="#FF381818" Foreground="White" Height="20" Grid.ColumnSpan="2" />
