            <ComboBoxItem Content="Slowloris" HorizontalAlignment="Left" Width="118" IsSelected="True" />
            <ComboBoxItem Content="Slow Post" HorizontalAlignment="Left" Width="118" />
            <ComboBoxItem Content="Slow Read" HorizontalAlignment="Left" Width="118" />
        </ComboBox>

        <TextBox Name="SlowReadUrlTextBox" HorizontalAlignment="Left"  Margin="213,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323" Visibility="Hidden" GotFocus="TextBox_OnGotFocus" LostFocus="TextBox_OnLostFocus"  Grid.Column="3" Background="#FF646464" Foreground="White" Height="18" />
        <Label Name="PortStepLabel" Content="Port step" HorizontalAlignment="Left" Margin="36,375,0,0" VerticalAlignment="Top" Height="24" Width="172" Foreground="White" Grid.Column="3" />

        <Label Name="SlowLorisKeepAliveDataLabel" Content="Slowloris keep alive data" HorizontalAlignment="Left" Margin="36,176,0,0" VerticalAlignment="Top" Height="24" Width="172" Foreground="White" Grid.Column="3" />
        <TextBox Name="SlowLorisKeepAliveDataTextBox" HorizontalAlignment="Left"  Margin="213,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323" GotFocus="TextBox_OnGotFocus" LostFocus="TextBox_OnLostFocus" Grid.Column="3" Background="#FF646464" Foreground="White" Height="18" />
        <Label Name="SlowLorisHeaderLabel" Content="Slowloris header" HorizontalAlignment="Left" Margin="36,58,0,0" VerticalAlignment="Top" Height="24" Width="172" Foreground="White" Grid.Column="3" />
        <TextBox Name="SlowLorisHeaderTextBox" HorizontalAlignment="Left"  Margin="213,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323"  Grid.Column="3" Background="#FF646464" Foreground="White" Height="110" />

        <Label Name="SlowReadUrlLabel" Content="SlowRead Url" HorizontalAlignment="Left" Margin="36,176,0,0" VerticalAlignment="Top" Height="24" Width="172" Visibility="Hidden"  Grid.Column="3" Foreground="White" />
