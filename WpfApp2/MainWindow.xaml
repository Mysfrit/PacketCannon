        <Label Content="Host IP address" HorizontalAlignment="Left" Margin="99,26,0,0" VerticalAlignment="Top" Width="100" Foreground="White" Grid.Column="1" Height="26" Grid.ColumnSpan="2" />
        <Label Content="Target IP address" HorizontalAlignment="Left" Margin="92,137,0,0" VerticalAlignment="Top" Width="107" Foreground="White" Grid.Column="1" Height="26" Grid.ColumnSpan="2" />
