        <Label Name="SlowPostHeaderLabel" Content="Slow Post header" HorizontalAlignment="Left" Margin="36,58,0,0" VerticalAlignment="Top" Height="24" Width="166" Visibility="Hidden" Grid.Column="3" Foreground="White" />
        <Label Name="SlowPostContentLengthLabel" Content="Slow Post payload size" HorizontalAlignment="Left" Margin="36,176,0,0" VerticalAlignment="Top" Height="24" Width="172" Visibility="Hidden" Grid.Column="3" Foreground="White" />
        <Label Name="SendersTimeBetweenLabel" Content="Delay between senders [ms]" HorizontalAlignment="Left" Margin="36,291,0,0" VerticalAlignment="Top" Height="28" Width="166" Foreground="White" Grid.Column="3" />
        <Label Name="SenderWaveTimeLabel" Content="Delay between waves [ms]" HorizontalAlignment="Left" Margin="36,319,0,0" VerticalAlignment="Top" Height="28" Width="166" Foreground="White" Grid.Column="3" />
        <Label Name="StartPortLabel" Content="Starting port" HorizontalAlignment="Left" Margin="36,347,0,0" VerticalAlignment="Top" Height="28" Width="172" Foreground="White" Grid.Column="3" />
        <Label Name="SenderCountLabel" Content="Total number of connections" HorizontalAlignment="Left" Margin="36,263,0,0" VerticalAlignment="Top" Height="24" Width="166" Foreground="White" Grid.Column="3" />
        <TextBox Name="SlowReadWindowSizeTextBox" HorizontalAlignment="Left" Margin="213,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323"  PreviewTextInput="OnlyNumbers" Visibility="Hidden"  Grid.Column="3" Background="#FF646464" Foreground="White" Height="18" />

        <TextBox Name="SlowPostHeaderTextBox" HorizontalAlignment="Left"  Margin="213,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323"  GotFocus="TextBox_OnGotFocus" LostFocus="TextBox_OnLostFocus" Visibility="Hidden" Grid.Column="3" Background="#FF646464" Foreground="White" Height="110" />
        <TextBox Name="SlowPostContentLengthTextBox" HorizontalAlignment="Left"  Margin="213,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323" GotFocus="TextBox_OnGotFocus" LostFocus="TextBox_OnLostFocus" Visibility="Hidden" Grid.Column="3" Background="#FF646464" Foreground="White" Height="18" />

        <TextBox Name="SenderCountTextBox" HorizontalAlignment="Left"  Margin="213,269,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" PreviewTextInput="OnlyNumbers" Height="18" Grid.Column="3" Background="#FF646464" Foreground="White" />
        <TextBox Name="SendersTimeBetweenTextBox" HorizontalAlignment="Left" Height="18" Margin="213,297,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" PreviewTextInput="OnlyNumbers" Grid.Column="3" Background="#FF646464" Foreground="White" />
        <TextBox Name="SendersWaveTimeTextBox" HorizontalAlignment="Left"  Margin="213,325,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" RenderTransformOrigin="0.179,0.304" PreviewTextInput="OnlyNumbers" Height="18" Grid.Column="3" Background="#FF646464" Foreground="White" />
        <TextBox Name="StartPortTextBox" HorizontalAlignment="Left"  Margin="213,353,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" PreviewTextInput="OnlyNumbers" Height="18" Grid.Column="3" Background="#FF646464" Foreground="White" />
        <TextBox Name="PortStepTextBox" HorizontalAlignment="Left"  Margin="213,381,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" PreviewTextInput="OnlyNumbers" Height="18" Grid.Column="3" Background="#FF646464" Foreground="White" />

